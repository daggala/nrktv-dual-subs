{
	"author": "rioam2",
	"name": "NRK TV Dual Subtitles",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "Provides side-by-side subtitle translations for tv.nrk.no",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://tv.nrk.no/*", "*://clients5.google.com/*"],
			"all_frames": true,
			"js": ["content.js"],
			"css": ["styles.css"]
		}
	],
	"browser_action": {
		"default_icon": {}
	}
}
